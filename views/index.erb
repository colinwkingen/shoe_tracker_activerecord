<h3>Find the shoes you want at a store near you.</h2>
<hr>
<div class="row container">
  <div class="col-xs-6">
    <label for="new_brand">Add a brand to the list:</label>
    <form action="/brands" method="post">
      <input type="text" name="new_brand" id="new_brand">
      <button class ="btn" type="submit" name="button">New Brand</button>
    </form>
    <hr>
    <h3>Current Brands:</h3>
    <ul>
      <% if @brands %>
        <% @brands.each() do |brand| %>
          <a href='/brands/<%= brand.name %>'><li><%= brand.name %></li></a>
        <% end %>
      <% end %>
    </ul>
  </div>
  <div class="col-xs-6">
    <label for="new_store">Add a store to the list:</label>
    <form action="/stores" method="post">
      <input type="text" name="new_store" id="new_store">
      <button class ="btn" type="submit" name="button">New Store</button>
    </form>
    <hr>
    <h3>Current Stores:</h3>
    <ul>
      <% if @stores %>
        <% @stores.each() do |store| %>
          <a href='/stores/<%= store.name %>'><li><%= store.name %></li></a>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
